<div>
    <p class="uk-legend">Interface tuning</p>

    <div class="uk-margin-small">
        <label class="uk-form-label" for="theme">Theme</label>
        <div class="uk-form-controls">

            <select name="theme"
                    id="theme"
                    class="uk-select uk-form-width-medium"
                    data-value="{{ settings.theme }}"
                    data-default="{{ defaultTheme }}">
                {% for style in defaults.themes %}
                    {% set selected = settings.theme ?? defauts.settings.theme %}
                    <option value="{{ style }}" {{ style == selected ? 'selected' }}>{{ style|capitalize }}</option>{{ }}
                {% endfor %}
            </select>
        </div>
    </div>


</div>
