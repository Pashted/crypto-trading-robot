<!DOCTYPE html>
<html lang="en">
<head>
    <title>{{ title }}</title>
    <link rel='stylesheet' href='/stylesheets/{{ settings.user.theme }}.css'/>

    <script src="/javascripts/dist/bundle.js"></script>
    <script src="/javascripts/dist/{{ section }}.js"></script>
    {% block head %}{% endblock %}
</head>
<body data-theme="{{ settings.user.theme }}">

<div class="uk-container uk-container-expand uk-margin-large-top">

    <div class="uk-grid">

        {% embed "sidebar.twig" %}{% endembed %}

        <div class="uk-width-expand">

            {% if title %}
                <h1>{{ title }}</h1>
            {% endif %}

            {% if description %}
                <p class="uk-text-lead">{{ description }}</p>
                <hr>
            {% endif %}

            <section class="uk-section uk-section-xsmall">{% block content %}{% endblock %}</section>

        </div>

    </div>


</div>

</body>
</html>
